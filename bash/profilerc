# 
# sourcing profilerc files installed on system
#
for profilerc in $(ls -a ~ |grep ^.profilerc_); do
    if [ -d ~/$profilerc ]; then
        for file in $(ls ~/$profilerc); do
            if [ -f $file ]; then
                echo "Sourcing profilerc '$file'."
                source ~/$profilerc/$file
            fi
        done
    fi

    if [ -f ~/$profilerc ]; then
        echo "Sourcing profilerc file '$profilerc'."
        source ~/$profilerc
    fi
done
